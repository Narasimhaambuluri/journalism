<div class="container py-5 px-3 bg-light mt-2 mb-5">
    <form action="/journals" method="post" class="px-3">
        <div class="h3">New Journal Entry</div>
        <div class="form-group">
            <textarea name="entry" class="form-control" id="journaltextarea" rows="10" required></textarea>
        </div>
        <div class="form-check form-check-inline py-3">
            <input name="public" class="form-check-input" type="checkbox" id="inlineCheckbox1">
            <label class="h5" for="inlineCheckbox1">Post Publicly in Community Forum</label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary px-5">Save</button>
        </div>
    </form>
</div>