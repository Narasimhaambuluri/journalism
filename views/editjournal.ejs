<div class="container py-5 px-3 bg-light mt-2 mb-5">
  <form action="/journal/edit/<%= journal._id %>" method="POST" class="px-3">
    <div class="h3">Edit Journal Entry</div>
    <div class="form-group">
      <!-- Textarea for journal entry -->
      <textarea
        name="entry"
        class="form-control"
        id="journaltextarea"
        rows="10"
        required
      >
<%= journal.entry %></textarea
      >
    </div>
    <div class="form-group">
      <!-- Input for media URL -->
      <input
        type="text"
        name="media"
        class="form-control"
        value="<%= journal.media %>"
        placeholder="Media URL"
      />
    </div>
    <div class="form-check form-check-inline py-3">
      <!-- Checkbox for public -->
      <input name="public" class="form-check-input" type="checkbox"
      id="inlineCheckbox1" <%= journal.public === 'on' ? 'checked' : '' %> >
      <label class="form-check-label h5" for="inlineCheckbox1"
        >Post Publicly in Community Forum</label
      >
    </div>

    <!-- Save button -->
    <div class="form-group mt-3">
      <button type="submit" class="btn btn-outline-primary px-5">Save</button>
    </div>
  </form>
</div>
